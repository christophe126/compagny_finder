<%= form_with url: root_path, method: :get do |form| %>
  <div class="form-group mb-2 mx-sm-3">
    <%= form.label :departement, "Département:", class: "form-label" %>
    <%= form.text_field :departement, class: "form-control" %>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <%= form.label :page, "Page:", class: "form-label" %>
    <%= form.text_field :page, class: "form-control" %>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <%= form.label :per_page, "Résultat(s) par page:", class: "form-label" %>
    <%= form.text_field :per_page, class: "form-control" %>
  </div>
  <div class="form-group mx-sm-3 mb-2">
    <%= form.submit "Rechercher", class: "btn btn-primary mb-3 w-100" %>
  </div>
<% end %>
